<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_marginRight="@dimen/_30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/signup"
                android:textColor="@color/_3c77b7"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/comp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/name"
                android:textSize="@dimen/_13sp" />

            <EditText
                android:id="@+id/gstin_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Gstin"
                android:textSize="@dimen/_13sp" />

            <EditText
                android:id="@+id/owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Owner Name"
                android:textSize="@dimen/text_regular_size" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Email"
                android:textSize="@dimen/text_regular_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="+91"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_regular_large" />

                <EditText
                    android:inputType="number"
                    android:paddingLeft="@dimen/_40dp"
                    android:id="@+id/edit_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/text_regular_size" />
            </RelativeLayout>


            <EditText
                android:id="@+id/state"
                android:editable="false"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:drawableRight="@mipmap/ic_drop_down"
                android:drawableTint="@color/_3c79b8"
                android:fontFamily="@font/montserrat_regular"
                android:hint="State"
                android:textSize="@dimen/text_regular_size" />

            <EditText
                android:id="@+id/city"
                android:editable="false"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:drawableRight="@mipmap/ic_drop_down"
                android:drawableTint="@color/_3c79b8"
                android:fontFamily="@font/montserrat_regular"
                android:hint="City"
                android:textSize="@dimen/text_regular_size" />
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Address"
                android:textSize="@dimen/text_regular_size" />
            <EditText
                android:id="@+id/pin_code"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Pin Code"
                android:textSize="@dimen/text_regular_size" />
            <EditText
                android:id="@+id/conp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Contact person"
                android:textSize="@dimen/text_regular_size" />

            <EditText
                android:id="@+id/email_conp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Email Contact person"
                android:textSize="@dimen/text_regular_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="+91"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_regular_large" />

                <EditText
                    android:id="@+id/number_conp"
                    android:inputType="number"
                    android:paddingLeft="@dimen/_40dp"
                    android:hint="Contact Person Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/text_regular_size" />
            </RelativeLayout>

            <EditText
                android:id="@+id/industry"
                android:editable="false"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:drawableRight="@mipmap/ic_drop_down"
                android:drawableTint="@color/_3c79b8"
                android:fontFamily="@font/montserrat_regular"
                android:hint="Industry"
                android:textSize="@dimen/text_regular_size" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/switch_k"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:buttonTint="@color/_3c79b8"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="I agree to the Terms and Service and Privacy policy* "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_regular_size" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginBottom="@dimen/_40dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30dp">

                <LinearLayout
                    android:layout_marginRight="@dimen/_30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Back to  "
                        android:textSize="@dimen/text_regular_size" />

                    <TextView
                        android:id="@+id/login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/login"
                        android:textColor="@color/_3c79b8"
                        android:textSize="@dimen/text_size_regular_large" />
                </LinearLayout>

                <TextView
                    android:id="@+id/signup_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_button"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingBottom="@dimen/_10dp"
                    android:paddingLeft="@dimen/_30dp"
                    android:paddingRight="@dimen/_30dp"
                    android:paddingTop="@dimen/_10dp"
                    android:text="@string/signup"
                    android:textAllCaps="true"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_size_regular_large" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>